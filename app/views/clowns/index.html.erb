<<h1>Pages#home</h1>
<h1>clowns</h1>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @article.photo.key, height: 300, crop: :fill %>')">
  Upload image
</div>

<table>
  <thead>
    <tr>
      <th>Tietle</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <%  @clowns.each do |clown| %>
        <tr>
          <td><%= clown.title %></td>
          <td><%= clown.body %></td>
          <td><%= cl_image_tag clown.photo.key %></td>
          <td><%= link_to 'Show', clown %></td>
          <td><%= link_to 'Edit', edit_clown_path(clown) %></td>
          <td><%= link_to 'Destroy', clown, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Clown', new_clown_path %>

<ul>
<li><%= clown.name %></li>
</ul>
<% end %>
